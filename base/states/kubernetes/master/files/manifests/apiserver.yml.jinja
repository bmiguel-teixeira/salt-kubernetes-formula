{%- from "kubernetes/map.jinja" import common with context %}
apiVersion: "v1"
kind: "Pod"
metadata:
  name: "kube-apiserver"
  namespace: "kube-system"
  labels:
    tier: control-plane
    component: kube-apiserver
spec:
  hostNetwork: true
  containers:
    - name: "kube-apiserver"
      image: "{{image}}"
      command:
        - "/hyperkube"
        - "apiserver"
        - "--admission-control=NamespaceLifecycle,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota"
        - "--address=0.0.0.0"
        - "--allow-privileged"
        - "--insecure-port=8080"
        - "--secure-port=443"
        - "--service-cluster-ip-range=10.0.100.0/16"
        - "--etcd-servers=http://127.0.0.1:2379"
        - "--etcd-quorum-read=true"
        - "--advertise-address={{common.cluster_dns}}"
        - "--tls-cert-file={{common.api_server_crt}}"
        - "--tls-private-key-file={{common.api_server_key}}"
        - "--client-ca-file={{common.ca_crt}}"
        - "--service-account-key-file={{common.api_server_key}}"
        - "--service-node-port-range=9000-10000"
        - "--storage-backend=etcd3"
        - "--v=4"
      volumeMounts:
        - name: "etc-kubernetes"
          mountPath: "{{common.kubernetes_base_path}}"
        - name: "var-lib-kubelet"
          mountPath: "/var/lib/kubelet"
  volumes:
    - name: "etc-kubernetes"
      hostPath:
        path: "{{common.kubernetes_base_path}}"
    - name: "var-lib-kubelet"
      hostPath:
        path: "/var/lib/kubelet"