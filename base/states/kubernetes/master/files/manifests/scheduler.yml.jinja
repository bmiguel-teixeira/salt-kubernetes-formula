{%- from "kubernetes/map.jinja" import common with context %}
apiVersion: "v1"
kind: "Pod"
metadata:
  name: "kube-scheduler"
  namespace: "kube-system"
  labels:
    tier: control-plane
    component: kube-scheduler
spec:
  hostNetwork: true
  containers:
    - name: "kube-scheduler"
      image: "{{image}}"
      command:
        - "/hyperkube"
        - "scheduler"
        - "--kubeconfig=/var/lib/kubelet/scheduler.kubeconfig"
        - "--leader-elect=true"
        - "--v=2"
      volumeMounts:
        - name: "var-lib-kubelet"
          mountPath: "/var/lib/kubelet"
  volumes:
    - name: "var-lib-kubelet"
      hostPath:
        path: "{{common.kubernetes_base_path}}/scheduler"